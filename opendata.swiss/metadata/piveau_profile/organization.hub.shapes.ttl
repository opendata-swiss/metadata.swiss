@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix pv: <https://piveau.eu/ns/voc#> .
@prefix ex: <https://example.org/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

_:languages
    rdf:first "de" ;
    rdf:rest ( "en" "fr" "it" ) ;
.

ex:Organization_Shape a sh:NodeShape ;
    sh:targetClass foaf:Organization ;
    sh:name "Organization"@en ;
    sh:property [
          sh:maxCount 1 ;
          pv:mappingClass "StandardText" ;
          pv:mappingName "id"
      ], [
          sh:maxCount 1 ;
          pv:mappingClass "Nested" ;
          pv:mappingName "catalog" ;
          pv:mappingProperty [
                          sh:minCount 1 ;
                          sh:maxCount 1 ;
                          pv:mappingClass "StandardText" ;
                          pv:mappingName "id"
                      ]
      ], [
          sh:maxCount 1 ;
          pv:mappingClass "Nested" ;
          pv:mappingName "catalog_record" ;
          pv:mappingProperty [
                          sh:maxCount 1 ;
                          pv:mappingClass "DateTime" ;
                          pv:mappingName "issued"
                      ], [
                          sh:maxCount 1 ;
                          pv:mappingClass "DateTime" ;
                          pv:mappingName "modified"
                      ]
      ], [
          sh:minCount 1 ;
          sh:maxCount 4 ;
          sh:uniqueLang true ;
          sh:languageIn _:languages ;
          sh:nodeKind sh:Literal ;
          sh:path foaf:name ;
          sh:severity sh:Violation ;
          pv:mappingClass "SimpleMultiLangTitle" ;
          pv:mappingName "name"
      ], [
          sh:minCount 1 ;
          sh:maxCount 4 ;
          sh:uniqueLang true ;
          sh:languageIn _:languages ;
          sh:nodeKind sh:Literal ;
          sh:path dct:description ;
          sh:severity sh:Violation ;
          pv:mappingClass "SimpleMultiLangTitle" ;
          pv:mappingName "description"
      ], [
          sh:path foaf:homepage ;
          sh:maxCount 1 ;
          sh:nodeKind sh:IRI ;
          sh:severity sh:Violation ;
          pv:mappingClass "Page" ;
          pv:mappingName "homepage"
      ], [
          sh:path schema:image ;
          sh:maxCount 1 ;
          sh:nodeKind sh:IRI ;
          sh:severity sh:Violation ;
          pv:mappingClass "StandardDisabled" ;
          pv:mappingName "image"
      ], [
          sh:path schema:parentOrganization ;
          sh:maxCount 1 ;
          sh:nodeKind sh:IRI ;
          pv:mappingClass "StandardResourceKeyword" ;
          pv:mappingName "parent_organization" ;
      ], [
          sh:path ex:politicalLevel ;
          sh:maxCount 1 ;
          sh:nodeKind sh:IRI ;
          pv:mappingClass "StandardResourceKeyword" ;
          pv:mappingName "political_level" ;
      ]
      .