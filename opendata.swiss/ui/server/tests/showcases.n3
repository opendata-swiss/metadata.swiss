<#inactive>
  a earl:TestCase ;
  rdfs:label "Inactive showcases are not included" ;
  tuner:formula {
    (</api/showcases> ?res) resource:getIn [] .

    ?res tuner:body ?body .
    {
      ?body log:notIncludes {
        </showcase/inactive> ?p ?o .
      } .
    }!tuner:assertThat .
  } ;
.
